<Window x:Class="Fingerprints.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fingerprints"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="91*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="name" Content="Nazwa" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="100" Grid.Row="1"/>
        <Label x:Name="type" Content="Typ rysowania" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="100" Grid.Row="2"/>
        <Label x:Name="color" Content="Kolor" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="100" Grid.Row="3"/>
        <Label x:Name="size" Content="Rozmiar" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="100" Grid.Row="4"/>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="125" Grid.Row="1"/>
        <ComboBox x:Name="comboBoxType" Grid.Column="1" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="125" Grid.Row="2" />
        <Button x:Name="buttonColorPicker" Grid.Column="1" Grid.Row="3" ></Button>
        <ComboBox x:Name="comboBoxColor" Grid.Column="1" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="125" Grid.Row="3"/>
        <ComboBox x:Name="comboBoxSize" Grid.Column="1" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="125" Grid.Row="4" Grid.RowSpan="2"/>
        <Button x:Name="add" Content="Dodaj" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="0,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="125" Click="add_Click"/>

    </Grid>
</Window>
